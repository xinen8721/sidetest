{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 10",
  "compilerOptions": {
    "lib": ["es2018"],
    "module": "commonjs",
    "target": "es2018",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "src/**/*.ts",
    "tests/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}